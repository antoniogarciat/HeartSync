<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_title" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate Variability"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/settings_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your HRV time-domain measures"
        android:textColor="#3B4F5C"
        android:layout_below="@id/settings_title"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/hrvlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:layout_below="@id/settings_description"
        android:layout_marginTop="50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/sdnn_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDNN:"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="#000"
                android:background="@color/light_blue"
                android:drawablePadding="10dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/rmssd_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RMSSD:"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="#000"
                android:background="@color/light_blue"
                android:drawablePadding="10dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/sdsd_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDSD:"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="#000"
                android:background="@color/light_blue"
                android:drawablePadding="10dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/nn50_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NN50:"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="#000"
                android:background="@color/light_blue"
                android:drawablePadding="10dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/nn20_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NN20:"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="#000"
                android:background="@color/light_blue"
                android:drawablePadding="10dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/pnn50_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pNN50:"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="#000"
                android:background="@color/light_blue"
                android:drawablePadding="10dp"
                />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/pnn20_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pNN20:"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="#000"
                android:background="@color/light_blue"
                android:drawablePadding="10dp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#656565"
        android:layout_below="@id/hrvlayout"
        android:layout_marginTop="20dp"/>

</RelativeLayout>